---
import BaseLayout from "../layouts/BaseLayout.astro";
import { SITE } from "../utils/site";
---

<BaseLayout>
  <section style="text-align:center; padding: 3rem 1rem; max-width: 1100px; margin: 0 auto;">
    <h1 style="margin: 0 0 0.5rem 0;">{SITE.title}</h1>
    <p style="margin: 0 0 2rem 0; opacity: 0.85;">{SITE.description}</p>

    <img src="/cover-hero.jpg" alt="Hero Cover" style="border-radius: 12px;" />

    <div style="margin-top: 2rem; display: grid; grid-template-columns: repeat(2, 1fr); gap: 1rem;">
      <img src="/covers/future-campus.jpg" alt="Future Campus" style="border-radius: 12px;" />
      <img src="/covers/club-culture.jpg" alt="Club Culture" style="border-radius: 12px;" />
      <img src="/covers/tech-lab.jpg" alt="Tech Lab" style="border-radius: 12px;" />
      <img src="/covers/sports-night.jpg" alt="Sports Night" style="border-radius: 12px;" />
    </div>
  </section>

  <!-- Mascot with floating animation -->
  <style>
    @keyframes float {
      0%   { transform: translateY(0px); }
      50%  { transform: translateY(-12px); }
      100% { transform: translateY(0px); }
    }
    .mascot {
      position: fixed;
      bottom: 20px;
      right: 20px;
      width: 120px;
      z-index: 1000;
      animation: float 4s ease-in-out infinite;
    }
  </style>

  <img 
    src="/mascot/nova-pulse.jpg" 
    alt="Nova Pulse Mascot" 
    class="mascot"
  />
</BaseLayout>